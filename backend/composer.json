{
    "name": "tu-proyecto/task-manager",
    "description": "Task Manager API",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "ext-pgsql": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
